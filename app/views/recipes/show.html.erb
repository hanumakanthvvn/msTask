<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <p class="lead text-muted">Recipe View</p>
    </div>
  </section>
  <%if @item %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <%=image_tag(@item.photo.url, height: '300', width: '800', alt: "image", class: "card-img-top") %>
        <div class="card-body">
          <p class="card-text"><b><%= @item.title%></b></p>
          <p class="card-text"><b>About:</b><%= @item.description%></p>
          <div class="d-flex justify-content-between align-items-center">
            <%if @item.tags.present?%>
              <b>Tags</b>
              <div class="btn-group">
                <%=link_to @item.tags.map(&:name).join(' ,'), '#', class:'btn btn-sm btn-outline-secondary'  %>
              </div>
            </div>
          <%end%>
        </p>
        <%if @item.chef %>
          <div class="d-flex justify-content-between align-items-center">
            <b>Chef</b>
            <div class="btn-group">
              <%=link_to @item.chef.name, '#', class:'btn btn-sm btn-outline-secondary'%>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
<%end%>
</main>